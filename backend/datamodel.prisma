enum Permission {
  ADMIN
  USER
  PERMISSIONUPDATE
}

type User {
  id: ID! @id,
  name: String! @unique,
  email: String! @unique,
  password: String!,
  bio: String,
  picture: String,
  posts: [Post!]!,
  permissions: [Permission] @scalarList(strategy:RELATION),
  createdAt: DateTime! @createdAt,
}

type Post {
  id: ID! @id,
  text: String,
  createdAt: DateTime! @createdAt,
  author: User! @relation(link: INLINE),
}