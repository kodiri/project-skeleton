enum Permission {
  ADMIN
  USER
  PERMISSIONUPDATE
}

type User {
  id: ID! @id,
  name: String!,
  email: String! @unique,
  password: String!,
  posts: [Post!]!,
  permissions: [Permission] @scalarList(strategy:RELATION),
  createdAt: DateTime! @createdAt,
}

type Post {
  id: ID! @id,
  text: String!,
  likes: Float!,
  createdAt: DateTime! @createdAt,
  owner: User! @relation(link: INLINE),
}